// calculadora2.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "const.h"
#include "functions.h"


int main()
{
	while (1) {

		int op = 0;
		int num1, num2;
		int resultado = 0;

		show_menu();
		cin >> op;

		num1 = read_number();
		num2 = read_number();

		switch (op) {
			case soma:
				resultado = add(num1, num2);			
				break;
			case subtracao:
				resultado = sub(num1, num2);
				break;
			default:
				break;
		}
		cout << "O resultado foi: " << resultado << endl;
	}

    return 0;
}

